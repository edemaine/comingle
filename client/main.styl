#react-root
  position: absolute
  left: 0
  right: 0
  top: 0
  bottom: 0

iframe
  width: 100%
  height: 100%

nav
  display: flex
  justify-content: center
  align-items: center
  background-color: #e6e5e5
  padding: 3px 0

.room-info
  &.room-info-visible
    background-color: #007bff
    color: #fff
  &.room-info-invisible
    background-color: #e9ecef

  .presence
    font-size: small
    > span
      display: inline-block
      margin-right: 1rem
    > .presence-invisible
      color: #aaa
