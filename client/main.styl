body
  overflow: hidden

#react-root
  position: absolute
  left: 0
  right: 0
  top: 0
  bottom: 0

iframe
  width: 100%
  height: 100%
  overflow: hidden
  position: absolute

nav
  display: flex
  justify-content: center
  align-items: center
  background-color: #d6dcde  // .flexlayout__border_left
  padding: 3px 0
  a, a:visited { color: inherit }

.RoomList
  .card
    overflow: visible  // allow timer to spill out of card
  .card-header
    padding: 0.25rem // 0.75rem
    text-align: center
    font-size: 80%
    font-weight: bold
    cursor: pointer
    .float-right
      margin: 0.25rem
  .card-body
    padding: 0
    .form-control
      margin: -1px
    .search-icon
      position: absolute
      right: 0.25rem
      margin: 0.25rem
      margin-top: 0.75rem
      font-size: 80%
      cursor: pointer
  // Give dismissible alerts normal margin; instead use float for close button
  .alert-dismissible
    padding-right: 1.25rem
    .close
      position: static
      float: right

.tab-title
  &.archived
    color: #dc3545  // danger color

.room-info
  color: black
  &:hover
    color: #003e80
  &:active
    color: #0069d9

  &.presence-visible
    background-color: #b8daff  // list-group-item-primary
  &.presence-invisible
    background-color: hsl(220,6%,95%)  // list-group-item-secondary, but brighter
  &.selected
    background-color: #b8daff  // list-group-item-primary
  &.archived
    color: #dc3545  // danger color

  .raise-hand
    float: right
    clear: right
    margin-right: -0.75rem
    z-index: 1
    opacity: 0.1
    &:hover
      opacity: 0.25
    &:active
      opacity: 0.5
    &.active
      opacity: 1.0
      &:hover
        opacity: 0.75
      svg
        transform: scale(1)
        animation: pulse 2s infinite ease-in-out
    .timer
      position: absolute
      transform: rotate(90deg)
      transform-origin: 0.55rem 0.75rem //0.65rem 0.65rem
      z-index: 1
      opacity: 1

  .presence-count
    float: right
    clear: right
    margin-right: -0.85rem
    display: flex
    flex-direction: row
    justify-content: flex-end
    font-size: 75%
    > span
      margin-left: 0.2rem
      &.presence-invisible
        color: rgba(0,0,0,0.333333333) // #aaa
      > svg
        font-size: 0.77em
        margin-right: 0.07em

  .presence
    font-size: 75%
    > span
      display: inline-block
      margin-right: 1rem
      &.presence-invisible
        color: rgba(0,0,0,0.333333333) // #aaa
      > svg
        font-size: 0.77em
        margin-right: 0.25rem

.welcome-page
  margin: 1rem

@keyframes pulse
  0%
    transform: scale(1)
  50%
    transform: scale(1.2)
  100%
    transform: scale(1)

.chat
  height: 100%
  display: flex
  flex-direction: column
  .messages
    flex-grow: 1
    overflow: auto
    padding: 0.5rem
  .message
    line-height: 130%
    margin-bottom: 0.5rem
  .date
    margin-bottom: 0.5rem
    text-align: center
    // Horizontal line wrapper from
    // https://stackoverflow.com/a/14731123/7797661
    overflow: hidden
    &:before, &:after
      background-color: black
      content: ""
      display: inline-block
      height: 1px
      position: relative
      vertical-align: middle
      width: 50%
    &:before
      right: 0.3rem
      margin-left: -50%
    &:after
      left: 0.3rem
      margin-right: -50%
  .header
    font-size: 80%
    display: flex
    flex-wrap: wrap
    margin-bottom: -0.1rem
    .sender
      font-weight: bold
    .sent
      flex-grow: 1
      text-align: right
      margin-left: 1rem
      color: #666
